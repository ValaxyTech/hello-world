pipeline {
    agent any
    
    tools { 
        maven 'Maven_3.8.1'
    }

    stages {

        stage ('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage ('Checkstyle Analysis') {
            steps {
                sh 'mvn checkstyle:checkstyle'
                recordIssues(tools: [checkStyle(pattern: '**/checkstyle-result.xml')])
            }
        }

        stage ('Sonarqube Analysis') {
            steps {
                sh 'mvn sonar:sonar -Dsonar.login=2c7c762b4396a75b11148e2512ef9bab2c2b4303'
            }
        }

	stage('Docker Build') {
	    steps {
	      	sh 'docker build -t saurabh221089/hello-world-docker-container:latest .'
	    }
	}

	stage('Docker Push') {
	    steps {
	      	withCredentials([usernamePassword(credentialsId: 'dockerHub', passwordVariable: 'dockerHubPassword', usernameVariable: 'dockerHubUser')]) {
        		sh "docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
	        	sh 'docker push saurabh221089/hello-world-docker-container:latest'
	        	}
		}
	}

    post{
	always {
		emailext body: "STATUS: ${currentBuild.currentResult}\nJob: ${JOB_NAME}\nMore info at: ${BUILD_URL}console\n\nCheckstyle analysis: ${BUILD_URL}checkstyle\n\nRegards\nRelease Team",
	            subject: "${JOB_NAME} :Build ${BUILD_NUMBER} :${currentBuild.currentResult}",
	            to: 'saurabh221089@gmail.com'
		}
	}    
}
}
